<header>
  <h1 class="text-center display-4"><%= @podcast.name %></h1>

<p class="text-center">
  <% @podcast.categories.each do |c|%> <%= link_to c.name, "/podcasts?category=#{c.id}" %> <% end %>
</p>

  <div class="text-center">
      <%= (button_to((@user.podcasts.include?(@podcast) ? "unsubscribe" : "subscribe"), subscription_path)) if @user %>
  </div>
</header>

<section class="w-75 mx-auto">

  <p class="lead">
    <%= @podcast.description %>
  </p>

  <form class="button_to" method="post" action="/podcasts/1/subscription">
    <input type="submit" value="unsubscribe">
    <input type="hidden" name="authenticity_token" value="SZFpydwRRzI5m0R4PNDw0jZLPPVlHS3ej6ocPQPUw6rApAJbr+Gsf4JT9wqzq0p+wKAAabD3G7DmalgpgkL0hg==">
  </form>

  <div class="card-columns">
    <% @episodes.each do |e| %>
      <div class="card">
        <form class="card-body" method="post" action="/episodes/<%= e.id %>/subscription">
          
            <% if current_user && current_user.favourite_episodes.include?(e) %>
              <img src="https://image.flaticon.com/icons/png/128/148/148836.png" alt="red-heart" width="25px" height="25px" style="float: right">
            <% else %>
              <img src="https://image.flaticon.com/icons/svg/660/660467.svg" alt="empty-heart" width="25px" height="25px" style="float: right">
            <% end %>
          
          <h5 class="card-title"><%= link_to e.title.capitalize, e %></h5>
          <p class="card-text"><%= e.description.first(200) %>...</p>
        </form>
        <div class="card-footer">
          <small class="text-muted"><% e.keywords.each do |k| %> <%= link_to k.word, k %> <% end %></small>
        </div>
      </div>
    <% end %>
  </div>

  <div>
    <h4>subscribers</h4>
      <ul>
        <% @subscribers.each do |s| %>
          <li><%= link_to s.username, s %></li>
        <%end%>
      </ul>
  </div>
</section>

<h1 class="text-center display-4"><%= @podcast.name %></h1>

<p class="text-center">
  <% @podcast.categories.each do |c|%> <%= link_to c.name, "/podcasts?category=#{c.name}" %> <% end %>
</p>

<div class="text-center">
    <%= button_to((@user.podcasts.include?(@podcast) ? "unsubscribe" : "subscribe"), subscription_path) %>
</div>

<p class="lead">
  <%= @podcast.description %>
</p>

<div class="card-deck">
  <% @episodes.each_with_index do |e, i| %>
    <div class="card">
      <div class="card-body">
        <h5 class="card-title"><%= link_to e.title.capitalize, e %></h5>
        <p class="card-text"><%= e.description.first(200) %>...</p>
      </div>
      <div class="card-footer">
        <small class="text-muted"><% e.keywords.each do |k| %> <%= link_to k.word, e %> <% end %></small>
      </div>
    </div>
  <% end %>
</div>

<div>
  <h4>subscribers</h4>
    <ul>
      <% @subscribers.each do |s| %>
        <li><%= link_to s.username, s %></li>
      <%end%>
    </ul>
</div>

<div>
    <h1 class="text-center display-2">podcasts</h1>
</div>

<%=form_tag podcasts_path, method: :get do%>
<select name="category" class="custom-select custom-select-lg mb-3">
  <option selected>filter by category</option>
  <% @categories.each do |c|%>
    <option value=<%="#{c.id}" %>><%= "#{c.name} (#{c.podcasts.count})" %></option>
  <% end %>
</select>
<%= submit_tag "filter"%>
<%end%>

  <ul class="list-group list-group-flush">
    <% @podcasts.each do |p|%>
      <li class="list-group-item d-flex justify-content-between align-items-center">
        <%= link_to p.name, p %>
        <span class="badge badge-primary badge-pill"><%= p.subscriptions.count %></span>
      </li>
    <% end %>
  </ul>

<div>
    <h1 class="text-center display-2">podcasts</h1>
</div>

  <select class="custom-select custom-select-lg mb-3">
    <option selected>filter by category</option>
    <% @categories.each do |c|%>
      <option value=<%= "/podcasts?category=#{c.name}" %>><%= "#{c.name} (#{c.podcasts.count})" %></option>
    <% end %>
  </select>

<div>
    <p class="text-center display-2">podcasts</p>
    <p class="text-center display-4"><%= @category %></p>
</div>

<section class="w-75 mx-auto">
  <%=form_tag podcasts_path, method: :get do%>
    <%=select_tag "category", options_from_collection_for_select(@categories, :id, :category_podcast_count), class:"custom-select custom-select-lg mb-3", onchange: "this.form.submit();", include_blank: "-- Filter by Category"%>
  <%end%>

  <ul class="list-group list-group-flush">
    <% @podcasts.each do |p|%>
      <li class="list-group-item d-flex justify-content-between align-items-center">
        <%= link_to p.name, p %>
        <span class="badge badge-primary badge-pill"><%= p.subscribers.count %></span>
      </li>
    <% end %>
  </ul>
</section>

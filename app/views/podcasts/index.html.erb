<h1>All Podcasts</h1>

<p>Categories</p>

  <ul class="list-group list-group-horizontal-sm">

    <% @categories.each do |c|%>
      <li class="list-group-item flex-fill"><%= link_to c.name, "/podcasts?category=#{c.name}"%> (<%=c.podcasts.count%>)</li>
    <%end%>
  </ul>



  <div class="list-group-flush">
    <% @podcasts.each do |p|%>
      <%= link_to p.name, p, class: "list-group-item list-group-item-action" %>
    <%end%>
  </div>

